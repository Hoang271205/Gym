        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Panel"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:backgroundTint="#DC3545"
            android:paddingHorizontal="16dp"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:drawableTint="@android:color/white"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <!-- THÃŠM Má»šI: Quick Actions Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnManageWorkouts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ‹ï¸ Manage Workouts"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:backgroundTint="#28A745"
            android:layout_marginEnd="8dp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:drawableTint="@android:color/white" />

        <Button
            android:id="@+id/btnViewStats"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="ðŸ“Š View Stats"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:backgroundTint="#17A2B8"
            android:layout_marginStart="8dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawableTint="@android:color/white" />

    </LinearLayout>

    <!-- ThÃ´ng tin thá»‘ng kÃª (cáº­p nháº­t Ä‘á»ƒ hiá»ƒn thá»‹ workout count) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1E1E2E"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvUserCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF6600"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Users"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF6600"
            android:layout_marginHorizontal="8dp" />

        <!-- THÃŠM Má»šI: Workout Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvWorkoutCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#28A745"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Workouts"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FF6600"
            android:layout_marginHorizontal="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-06-08"
                android:textColor="#FF6600"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Date"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- TiÃªu Ä‘á» danh sÃ¡ch users (giá»¯ nguyÃªn) -->
